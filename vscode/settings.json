{
    "files.autoSave": "afterDelay",
    // vim
    // vim easymotion
    "vim.easymotion": true,
    "vim.easymotionMarkerForegroundColorOneChar": "rgba(0,240,170,0.9)",
    "vim.easymotionMarkerForegroundColorTwoCharSecond": "rgba(0,240,170,0.9)",
    // vim leader
    "vim.leader": "<space>", 
    // vim search
    "vim.incsearch": true,
    // vim other config
    "vim.foldfix": true,
    "vim.visualstar": true,
    // vim nnoremap
    "vim.normalModeKeyBindings": [
        {
            "before": ["g", "d"],
            "commands": ["editor.action.revealDefinition"]
        },
        {
            "before": ["g", "s"],
            "commands": ["workbench.action.gotoSymbol"]
        },
        {
            "before": ["g", "S"],
            "commands": ["workbench.action.showAllSymbols"]
        },
        {
            "before": ["g", "r"],
            "commands": ["editor.action.goToReferences"]
        },
        {
            "before": ["g", "i"],
            "commands": ["editor.action.goToImplementation"]
        },
        {
            "before": ["g", "t"],
            "commands": ["editor.action.goToTypeDefinition"]
        },
        {
            "before": ["<Leader>", "r", "n"],
            "commands": ["editor.action.rename"]
        },
        {
            "before": ["K"],
            "commands": ["editor.action.showHover"]
        },
        {
            "before": ["g", "e"],
            "commands": ["editor.action.marker.next"]
        },
        {
            "before": ["g", "E"],
            "commands": ["editor.action.marker.previous"]
        },
        {
            "before": ["leader", "f"],
            "commands": ["editor.toggleFold"]
        },
        {
            "before": ["f"],
            "after": ["leader", "leader", "leader", "b", "d", "w"]
        },
        {
            "before": ["leader", "y"],
            "after": ["\"", "*", "y"]
        },
    ],
    // vim inoremap
    "vim.insertModeKeyBindings": [
        {
            "before": ["<C-j>"],
            "after": ["<Esc>"]
        },        
    ],
    // vim vnoremap
    "vim.visualModeKeyBindings": [
        {
            "before": ["leader", "/"],
            "after": ["escape", "/", "\\", "%", "V"]
        },
        {
            "before": ["leader", "y"],
            "after": ["\"", "*", "y"]
        }
    ]
}